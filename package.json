{
  "name": "beehive-monitor-pwa",
  "version": "1.0.0",
  "description": "Intelligent IoT System for Beehive Monitoring - Progressive Web Application",
  "private": true,
  "workspaces": [
    "client"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=client",
    "build": "npm run build --workspace=client",
    "start": "npm run preview --workspace=client",
    "test": "jest --testPathIgnorePatterns=integration",
    "test:watch": "jest --watch --testPathIgnorePatterns=integration",
    "test:coverage": "jest --coverage --testPathIgnorePatterns=integration",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:client": "npm test --workspace=client",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:login": "node e2e/login-helper.js",
    "test:all": "npm test && npm run test:client && npm run test:e2e",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "iot",
    "beehive",
    "monitoring",
    "pwa",
    "esp32",
    "sensors"
  ],
  "author": "Simon Lusnak",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/jest": "^30.0.0",
    "concurrently": "^8.2.2",
    "dotenv": "^17.2.3",
    "jest": "^30.2.0",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "@next-auth/mongodb-adapter": "^1.1.3",
    "@vercel/functions": "^3.2.0",
    "cloudinary": "^1.41.3",
    "cookie-parser": "^1.4.7",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "multer": "^2.0.2",
    "multer-storage-cloudinary": "^4.0.0",
    "next-auth": "^4.24.13"
  }
}
